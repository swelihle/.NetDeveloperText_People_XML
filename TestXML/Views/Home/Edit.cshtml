@model TestXML.Business.ViewModel.PersonModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="row">
                <!-- Colomn Left-->
                <div class="col-md-2" style=" text-align:right; -webkit-transform:perspective(600px) rotateY(-20deg);backface-visibility:hidden;-webkit-backface-visibility:hidden;">
                    <!-- Image-->
                    <div class="row">
                     @{
                    var base64 = Convert.ToBase64String(Model.Image);
                    var imgSrc = $"data:image/gif;base64,{base64}";
                     }

                <img src="@imgSrc" alt="@Model.Name" style="margin-bottom:30px; width:160px; box-shadow:-2px 0 1px 1px #000;border-radius:5px;-webkit-transform:perspective(600px) rotateY(-20deg);backface-visibility:hidden;-webkit-backface-visibility:hidden;transition:transform .5s linear 0s;cursor:pointer" />
                </div>
                    <!-- End Image-->

                    <!-- Label Colomns-->
                    <div class="row" style="margin-right:-30px">

                        <div class="col-md-10" style="">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-10" })
                                    <div class="col-md-10">
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-md-10" })
                                    <div class="col-md-10">
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.Cellphone, htmlAttributes: new { @class = "control-label col-md-10" })
                                    <div class="col-md-10">
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Image, htmlAttributes: new { @class = "control-label col-md-10 " })
                                    <div class="col-md-10">
                                    </div>
                                </div>
                        </div>
                    </div>
                    <!-- End Label Colomns-->
                </div>
                <!-- End Colomn Left-->

                <!-- Colomn Right-->
                <div class="col-md-10">
                    <!-- Image-->
                    <div class="row">
                        <img src="@imgSrc" alt="@Model.Name" style="visibility:hidden; margin-bottom:30px; width:200px; box-shadow:-2px 0 1px 1px #000;border-radius:5px;-webkit-transform:perspective(600px) rotateY(-20deg);backface-visibility:hidden;-webkit-backface-visibility:hidden;transition:transform .5s linear 0s;cursor:pointer" />
                    </div>
                    <!-- End Image-->

                    <!-- Input Feilds-->
                    <div class="row" style="margin-top:-25px">

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Cellphone, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Cellphone, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.TextBoxFor(x => x.FileUpload, "", new { type = "file", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FileUpload, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                    <!-- End Input Feilds-->
                </div>
                <!-- End Colomn Right-->
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
